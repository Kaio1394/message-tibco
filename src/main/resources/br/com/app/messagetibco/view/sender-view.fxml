<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.app.messagetibco.controller.SenderController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <GridPane hgap="10" vgap="15">

        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="90"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="%tools.sender.view.label.sender_config"
               GridPane.columnIndex="0"
               GridPane.rowIndex="0"/>

        <ComboBox prefWidth="200"
                  fx:id="cbListSenderConfig"
                  GridPane.columnIndex="1"
                  GridPane.rowIndex="0"/>

        <Label text="%settings.sender.view.label.daemon" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="daemonField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="%settings.sender.view.label.network" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="networkField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="%settings.sender.view.label.service" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="serviceField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="%settings.sender.view.label.subject" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="subjectField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="%tools.sender.view.label.message" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextArea prefHeight="200" prefWidth="200" fx:id="textAreaMessageTibco" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <Button text="%tools.sender.view.button.send" GridPane.columnIndex="1" GridPane.rowIndex="6" onAction="#onSenderMessage"/>
    </GridPane>
</VBox>
