<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.app.messagetibco.controller.SenderController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <GridPane hgap="10" vgap="15">

        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="90"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="%tools.sender.view.label.sender_config"
               GridPane.columnIndex="0"
               GridPane.rowIndex="0"/>

        <ComboBox prefWidth="200"
                  fx:id="cbListSenderConfig"
                  GridPane.columnIndex="1"
                  GridPane.rowIndex="0"/>

        <Label text="%tools.sender.view.label.message"
               GridPane.columnIndex="0"
               GridPane.rowIndex="1"/>

        <TextArea prefHeight="200" prefWidth="200" fx:id="textAreaMessageTibco"/>

    </GridPane>
</VBox>
