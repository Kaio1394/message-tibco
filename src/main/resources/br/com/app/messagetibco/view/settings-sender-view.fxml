<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.app.messagetibco.controller.SettingsController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- FORM -->
    <GridPane hgap="10" vgap="15">

        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="90" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="%settings.sender.view.label.daemon" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="daemonField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="%settings.sender.view.label.host" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="hostField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="%settings.sender.view.label.service" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="serviceField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="%settings.sender.view.label.subject" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="subjectField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>

    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button onAction="#onSave" text="%settings.sender.view.button.save" />
    </HBox>

</VBox>
